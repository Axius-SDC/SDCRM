<?xml version="1.0" encoding="UTF-8"?>
<!--
  Exemple SDC4: Signes Vitaux du Patient
  Langue: Français (France)

  Cet exemple démontre l'agnosticisme linguistique du SDC4.
  Les identifiants structurels (dm-, ms-, mc-) sont immuables,
  mais les étiquettes et descriptions sont en français.
-->
<dm-h7k2xvitalsfr
  xmlns:sdc4="https://semanticdatacharter.com/ns/sdc4/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- Métadonnées du modèle en français -->
  <sdc4:dm-label>Signes Vitaux du Patient</sdc4:dm-label>
  <sdc4:dm-description>Enregistrement de la pression artérielle et de la fréquence cardiaque</sdc4:dm-description>
  <sdc4:dm-language>fr-FR</sdc4:dm-language>
  <sdc4:dm-encoding>UTF-8</sdc4:dm-encoding>

  <!-- Métadonnées de l'instance -->
  <sdc4:instance-id>inst-clj5x9z8a000108l0abc123fr</sdc4:instance-id>
  <sdc4:instance-version>1</sdc4:instance-version>
  <sdc4:creation-timestamp>2025-10-19T14:30:00+02:00</sdc4:creation-timestamp>

  <!-- Fournisseur (Hôpital) -->
  <sdc4:provider>
    <sdc4:party-name>Hôpital Universitaire de Paris</sdc4:party-name>
    <sdc4:party-type>organization</sdc4:party-type>
  </sdc4:provider>

  <!-- Sujet (Patient) -->
  <sdc4:subject>
    <sdc4:party-name>Jean Dupont</sdc4:party-name>
    <sdc4:party-id>1234567890123</sdc4:party-id>
    <sdc4:party-id-type>NIR</sdc4:party-id-type>
  </sdc4:subject>

  <!-- Données cliniques: Cluster de Pression Artérielle -->
  <sdc4:ms-clj5x1g8f000008l09j7f6c3d>
    <!-- Dans le schéma XSD, le label serait fixé comme "Pression Artérielle" -->

    <!-- Systolique -->
    <sdc4:ms-clj5x2p4k000108l01a2b3c4d>
      <!-- Dans le schéma XSD, le label serait fixé comme "Systolique" -->
      <sdc4:xdquantity-value>120</sdc4:xdquantity-value>
      <sdc4:xdquantity-units>
        <sdc4:xdstring-value>mmHg</sdc4:xdstring-value>
      </sdc4:xdquantity-units>
      <sdc4:timestamp>2025-10-19T14:30:00+02:00</sdc4:timestamp>
    </sdc4:ms-clj5x2p4k000108l01a2b3c4d>

    <!-- Diastolique -->
    <sdc4:ms-clj5x2p4k000108l01a2b3c4e>
      <!-- Dans le schéma XSD, le label serait fixé comme "Diastolique" -->
      <sdc4:xdquantity-value>80</sdc4:xdquantity-value>
      <sdc4:xdquantity-units>
        <sdc4:xdstring-value>mmHg</sdc4:xdstring-value>
      </sdc4:xdquantity-units>
      <sdc4:timestamp>2025-10-19T14:30:00+02:00</sdc4:timestamp>
    </sdc4:ms-clj5x2p4k000108l01a2b3c4e>
  </sdc4:ms-clj5x1g8f000008l09j7f6c3d>

  <!-- Fréquence Cardiaque -->
  <sdc4:ms-clj5xheart000208l0def456fr>
    <!-- Dans le schéma XSD, le label serait fixé comme "Fréquence Cardiaque" -->
    <sdc4:xdcount-value>72</sdc4:xdcount-value>
    <sdc4:xdcount-units>
      <sdc4:xdstring-value>bpm</sdc4:xdstring-value>
    </sdc4:xdcount-units>
    <sdc4:timestamp>2025-10-19T14:30:00+02:00</sdc4:timestamp>
  </sdc4:ms-clj5xheart000208l0def456fr>

  <!-- Piste d'audit -->
  <sdc4:audit>
    <sdc4:audit-timestamp>2025-10-19T14:30:00+02:00</sdc4:audit-timestamp>
    <sdc4:audit-party>
      <sdc4:party-name>Dr. Marie Bernard</sdc4:party-name>
      <sdc4:party-role>Infirmière</sdc4:party-role>
    </sdc4:audit-party>
    <sdc4:audit-action>Mesure des signes vitaux</sdc4:audit-action>
  </sdc4:audit>
</dm-h7k2xvitalsfr>
