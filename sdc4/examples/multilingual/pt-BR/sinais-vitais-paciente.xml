<!--
  Exemplo SDC4: Sinais Vitais do Paciente
  Idioma: Português (Brasil)

  Este exemplo demonstra a agnóstica de idioma do SDC4.
  Os identificadores estruturais (dm-, ms-, mc-) são imutáveis,
  mas os rótulos e descrições estão em português.
-->
<dm-h7k2xvitalspt
  xmlns:sdc4="https://semanticdatacharter.com/ns/sdc4/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- Metadados do modelo em português -->
  <sdc4:dm-label>Sinais Vitais do Paciente</sdc4:dm-label>
  <sdc4:dm-description>Registro de pressão arterial e frequência cardíaca</sdc4:dm-description>
  <sdc4:dm-language>pt-BR</sdc4:dm-language>
  <sdc4:dm-encoding>UTF-8</sdc4:dm-encoding>

  <!-- Metadados da instância -->
  <sdc4:instance-id>inst-clj5x9z8a000108l0abc123pt</sdc4:instance-id>
  <sdc4:instance-version>1</sdc4:instance-version>
  <sdc4:creation-timestamp>2025-10-19T14:30:00-03:00</sdc4:creation-timestamp>

  <!-- Provedor (Hospital) -->
  <sdc4:provider>
    <sdc4:party-name>Hospital das Clínicas de São Paulo</sdc4:party-name>
    <sdc4:party-type>organization</sdc4:party-type>
  </sdc4:provider>

  <!-- Assunto (Paciente) -->
  <sdc4:subject>
    <sdc4:party-name>João da Silva</sdc4:party-name>
    <sdc4:party-id>12345678901</sdc4:party-id>
    <sdc4:party-id-type>CPF</sdc4:party-id-type>
  </sdc4:subject>

  <!-- Dados clínicos: Cluster de Pressão Arterial -->
  <sdc4:ms-clj5x1g8f000008l09j7f6c3d>
    <!-- No esquema XSD, o label seria fixado como "Pressão Arterial" -->

    <!-- Sistólica -->
    <sdc4:ms-clj5x2p4k000108l01a2b3c4d>
      <!-- No esquema XSD, o label seria fixado como "Sistólica" -->
      <sdc4:xdquantity-value>120</sdc4:xdquantity-value>
      <sdc4:xdquantity-units>
        <sdc4:xdstring-value>mmHg</sdc4:xdstring-value>
      </sdc4:xdquantity-units>
      <sdc4:timestamp>2025-10-19T14:30:00-03:00</sdc4:timestamp>
    </sdc4:ms-clj5x2p4k000108l01a2b3c4d>

    <!-- Diastólica -->
    <sdc4:ms-clj5x2p4k000108l01a2b3c4e>
      <!-- No esquema XSD, o label seria fixado como "Diastólica" -->
      <sdc4:xdquantity-value>80</sdc4:xdquantity-value>
      <sdc4:xdquantity-units>
        <sdc4:xdstring-value>mmHg</sdc4:xdstring-value>
      </sdc4:xdquantity-units>
      <sdc4:timestamp>2025-10-19T14:30:00-03:00</sdc4:timestamp>
    </sdc4:ms-clj5x2p4k000108l01a2b3c4e>
  </sdc4:ms-clj5x1g8f000008l09j7f6c3d>

  <!-- Frequência Cardíaca -->
  <sdc4:ms-clj5xheart000208l0def456pt>
    <!-- No esquema XSD, o label seria fixado como "Frequência Cardíaca" -->
    <sdc4:xdcount-value>72</sdc4:xdcount-value>
    <sdc4:xdcount-units>
      <sdc4:xdstring-value>bpm</sdc4:xdstring-value>
    </sdc4:xdcount-units>
    <sdc4:timestamp>2025-10-19T14:30:00-03:00</sdc4:timestamp>
  </sdc4:ms-clj5xheart000208l0def456pt>

  <!-- Trilha de auditoria -->
  <sdc4:audit>
    <sdc4:audit-timestamp>2025-10-19T14:30:00-03:00</sdc4:audit-timestamp>
    <sdc4:audit-party>
      <sdc4:party-name>Dr. Maria Santos</sdc4:party-name>
      <sdc4:party-role>Enfermeira</sdc4:party-role>
    </sdc4:audit-party>
    <sdc4:audit-action>Medição de sinais vitais</sdc4:audit-action>
  </sdc4:audit>
</dm-h7k2xvitalspt>
